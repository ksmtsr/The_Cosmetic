<!DOCTYPE html>
<html>
  <head>
    <title>TheCosmetic</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
<header>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <img class="card-img" src="/assets/pink.jpg" alt="">
           <div class="card-img-overlay">
            <p class="display-2">The Cosmetic</p>
           </div>
        </div>
      </div>
<div class="col-md-8"></div>
  <% if admin_signed_in? %>
<div class="btn-group">
<%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-secondary mr-3" %>
<%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-secondary mr-3" %>
<%= link_to "注文履歴一覧", admin_root_path, class: "btn btn-outline-secondary mr-3" %>
<%= link_to "ジャンル一覧", admin_root_path, class: "btn btn-outline-secondary mr-3" %>
<%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:"btn btn-outline-secondary" %>
</div>
<% elsif customer_signed_in? %>

<div class="btn-group">
<%= link_to "マイページ", customers_path, class: "btn btn-outline-secondary mr-3" %>
<%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary mr-3" %>
<%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary mr-3" %>
<%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class:"btn btn-outline-secondary" %>
</div>
<% else %>
<div class="btn-group">
<%= link_to "About", about_path, class: "btn btn-outline-secondary" %>
<%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary" %>
<%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary" %>
<%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary" %>
</div>
<% end %>
    </div>
  </div>
</header>
<body>
<%= yield %>
</body>
  <footer>
    <div class="text-center mt-5">footer</div>
    </footer>
</html>
