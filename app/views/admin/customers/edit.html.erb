<div class="container">
  <div class="font-weight-bold h2 mt-5 mb-5 text-center">
    会員情報編集
  </div>
  <%if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
      <% @customer.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row justify-content-center">
    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <table class="table table-borderless">
    <tr>
        <td class="text-left">氏名</td>
        <td class="text-left"><%= f.text_field :last_name, class: "col-auto" %>
        <%= f.text_field :first_name, class: "col-auto" %></td>
    </tr>
    <tr>
        <td class="text-left">フリガナ</td>
        <td class="text-left"><%= f.text_field :last_name_kana, class: "col-auto" %>
        <%= f.text_field :first_name_kana, class: "col-auto" %></td>
    </tr>
    <tr>
        <td class="text-left">メールアドレス</td>
        <td class="text-left"><%= f.email_field :email, class: "col-auto", autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
        <td class="text-left">郵便番号</td>
        <td class="text-left"><%= f.text_field :postal_code, class: "col-auto", autofocus: true, autocomplete: "postal_code" %></td>
    </tr>
    <tr>
        <td class="text-left">住所</td>
        <td class="text-left"><%= f.text_field :address, class: "col-auto", autofocus: true, autocomplete: "address" %></td>
    </tr>
    <tr>
        <td class="text-left">電話番号(ハイフン無し)</td>
        <td class="text-left"><%= f.text_field :telephone_number, class: "col-auto" %></td>
    </tr>
    <tr>
        <td class="text-left">会員ステータス</td>
        <td class="text-left">
          <%= f.radio_button :is_deleted, 'false' %>
          有効
          <%= f.radio_button :is_deleted, 'true' %>
          退会
        </td>
    </tr>
  </div>
      </table>
        <div class="text-center">
          <%= f.submit "変更を保存", class: "btn btn-lg btn-success"  %>
        </div>
  <% end %>
</div>