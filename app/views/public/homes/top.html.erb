<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card2 mt-5">
        <%= image_tag asset_path('flower.jpg'), alt: '', class: "card-img" %>
           <div class="card-img-overlay mt-3">
           <div class="box1 text-center">
            <div class="small">The Cosmeticはリアルな口コミが見れる</div>
            <div class="small">コスメ通販サイトです。</div>
            <div class="small">お買い物には会員登録が必要です。</div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8 text-center">
      <h2 class="mt-2 mb-3 mr-5 font-weight-bold text-secondary">New Arrivals</h2>
      <% @items.each do |item| %>
        <div class="mb-3">
          <div class="row">
            <div class="col-md-6 border-bottom">
              <%= link_to item_path(item) do %>
                <%= image_tag item.image, size: '150x150' %>
              <% end %>
            </div>
            <div class="col-md-6 text-left border-bottom">
              <h5><%= item.name %></h5>
              <%= simple_format(item.introduction) %>
              <div class="mb-3 pl-5">
              &yen; <%= item.price %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>