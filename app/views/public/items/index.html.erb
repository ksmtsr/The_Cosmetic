<h2 class="text-center mb-5">Items</h2>
  <div class="container">
    <div class="items">
    <div class="row justify-content-center">
      <% @items.each do |item| %>
      <div class="col-4 text-center mb-5">
        <%= link_to item_path(item) do %>
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "250x250" %>
          <% end %>
        <% end %>
        <p><%= item.name %></p>
        <p>Â¥<%= item.price %></p>
      </div>
      <% end %>
    </div>
    </div>
  </div>
  <%= paginate @items %>
