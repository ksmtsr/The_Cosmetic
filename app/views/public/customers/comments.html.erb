<div class="container">
  <div class="font-weight-bold h2 mt-5 mb-5 text-center">
    口コミ一覧
  </div>
    <div class="row">
      <div class="text-center" style="width: 100%;">
         <%= link_to '新しい順', comments_path(latest: "true") %>
         |<%= link_to '古い順', comments_path(old: "true") %>
         |<%= link_to '評価の高い順', comments_path(star_count: "true") %>
      </div>
      <% @comments.each do |comment| %>
      <div class="col-md-12 mt-3">
        <div class="border border-dark w-50 p-4 mx-auto ">
          <div id="post_raty<%= comment.id %>"></div>
          <script>
          var elem = document.getElementById('post_raty<%= comment.id %>');
          var opt = {
              starOn: "<%= asset_path('star-on.png') %>",
              starOff: "<%= asset_path('star-off.png') %>",
              starHalf: "<%= asset_path('star-half.png') %>",
              half: true,
              readOnly: true,
              score: <%= comment.star || 0 %>
            };
            raty(elem,opt);
          </script>
          <%= comment.created_at.strftime('%Y/%m/%d') %></br>
          <%= comment.review %></br>
          <%= image_tag comment.item.image, size: "250x200", class: "mt-3 mb-3" %></br>
          <%= comment.item.name %>
        </div>
      </div>
      <% end %>
  </div>
</div>