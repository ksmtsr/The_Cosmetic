<div class="container">
  <div class="font-weight-bold h2 mt-5 mb-5 text-center">
    口コミ投稿
  </div>
  <div class="row justify-content-center">
  <%= form_with model: @comments, url: item_comments_path(@item_id), method: :post do |f| %>
    <div class="col-md-5 mt-5">
      <%= f.label :商品レビュー %>
      <%= f.text_area :review, style: "width:300%", rows: "8" %>
    </div>
    <div class="text-center">
      <%= f.submit "口コミを投稿する", class:"btn btn-info rounded-pill mb-5 mt-5" %>
    </div>
  <% end %>
  </div>
</div>