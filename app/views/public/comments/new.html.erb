<div class="container">
  <div class="font-weight-bold h2 mt-5 mb-5 text-center">
    口コミ投稿
  </div>
  <div class="row justify-content-center">
  <%= form_with model: @comments, url: item_comments_path(@item_id), method: :post do |f| %>
    <div class="col-md-5 mt-5">
      <div id="post_raty" style="width: 150px"></div>
          <script>
          var elem = document.getElementById('post_raty');
          var opt = {
              starOn: "<%= asset_path('star-on.png') %>",
              starOff: "<%= asset_path('star-off.png') %>",
              starHalf: "<%= asset_path('star-half.png') %>",
              half: true,
              scoreName: 'comment[star]',
              score: <%= @comments.star || 0 %>
            };
            raty(elem,opt);
          </script>
      <%= f.label :商品レビュー %>
      <%= f.text_area :review, style: "width:300%", rows: "8" %>
    </div>
    <div class="text-center">
      <%= f.submit "口コミを投稿する", class:"btn btn-info rounded-pill mb-5 mt-5" %>
    </div>
  <% end %>
  </div>
</div>