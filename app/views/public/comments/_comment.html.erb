<div class="row">
      <div class="text-center" style="width: 100%;">
         <%= link_to '新しい順', comments_path(latest: "true") %>
         |<%= link_to '古い順', comments_path(old: "true") %>
         |<%= link_to '評価の高い順', comments_path(star_count: "true") %>
      </div>
    <% if comments.blank? %>
      <div class="text-center mb-3 h5" style="width: 100%;">口コミはありません</div>
    <% else %>
     <% comments.each do |comment| %>
      <div class="col-md-12 mt-3">
        <div class="box">
         <div class="border">
          <div id="post_raty<%= comment.id %>"></div>
          <script>
          var parent = document.getElementById('post_raty<%= comment.id %>');

         while(parent.lastChild){
          parent.removeChild(parent.lastChild);
         }
          var elem = document.getElementById('post_raty<%= comment.id %>');
          var opt = {
              starOn: "<%= asset_path('star-on.png') %>",
              starOff: "<%= asset_path('star-off.png') %>",
              starHalf: "<%= asset_path('star-half.png') %>",
              half: true,
              readOnly: true,
              score: <%= comment.star || 0 %>
            };
            raty(elem,opt);
          </script>
          <%= comment.created_at.strftime('%Y/%m/%d') %></br>
          name: <%= comment.customer.full_name %></br>
          <%= simple_format(comment.review) %></br>
          <%= image_tag comment.item.image, size: "250x200", class: "mt-3 mb-3" %></br>
          <%= comment.item.name %>
          <% if comment.customer == current_customer %>
            <%= link_to "編集", edit_item_comment_path(comment.item_id, comment), class: "text-right" %>
          <% end %>
        </div>
       </div>
      </div>
      <% end %>
    <% end %>
</div>
